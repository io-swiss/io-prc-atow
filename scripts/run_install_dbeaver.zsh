#!/bin/zsh

set -e

# ------------------------------------------------------------------------------
#
# run_install_dbeaver.zsh: Install DBeaver on macOS.
#
# ------------------------------------------------------------------------------

echo "=========================================================================="
echo "Installing DBeaver Community Edition."
echo "--------------------------------------------------------------------------"

# PrÃ¼fen, ob Homebrew installiert ist
if ! command -v brew &> /dev/null
then
    echo "Homebrew could not be found. Please install it first."
    exit 1
fi

echo "=========================================================================="
echo "Updating Homebrew..."
echo "--------------------------------------------------------------------------"
brew update

echo "=========================================================================="
echo "Installing DBeaver..."
echo "--------------------------------------------------------------------------"
brew install --cask dbeaver-community

echo "=========================================================================="
echo "DBeaver Community Edition has been installed."
echo "--------------------------------------------------------------------------"

date +"DATE TIME : %d.%m.%Y %H:%M:%S"
echo "--------------------------------------------------------------------------"
echo "End"
echo "=========================================================================="
